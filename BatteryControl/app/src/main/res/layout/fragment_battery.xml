<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/fragment_prbLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <ImageView
        android:id="@+id/fragment_imgStatus"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/fragment_prbLevel"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/fragment_txtLevel"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fragment_imgStatus"
        android:layout_alignParentStart="true"
        android:layout_below="@id/fragment_prbLevel"
        android:gravity="center"
        tools:text="Level Battery:" />
</RelativeLayout>